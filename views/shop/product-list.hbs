<main>
    {{#if hasProducts}}
        <div class="grid">
            {{#each prods}}
            <article>
                <header class="card__header">
                    <h1 class="product__title"> {{this.title}} </h1>
                </header>
                
                <div class="card__image">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ8YhKL56P1qXuIhjeZOwZmXOCxyMTx5raQBQ&usqp=CAU", alt="A product here">
                </div>
                
                <div class="card__content">
                    <h2 class="product__price"> {{this.price}}$ </h2>
                    <p class="product__description">{{this.description}}</p>
                </div>
                
                <div>
                    <button class="btn" type="submit">Add to Cart</button>
                </div>
            </article>
            {{/each}}
        </div>
        
    {{else}}
        <h1>No products found</h1>
    {{/if}}
</main>

